<Window x:Class="Library.View.BorrowBookPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View"
        mc:Ignorable="d"
        Title="BorrowBookPage" Height="450" Width="800">
    <StackPanel>
        <StackPanel Margin="50" Orientation="Horizontal">
            <StackPanel Width="400">
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Choose the book:" />

                <ComboBox
                    x:Name="users"
                    Width="181"
                    Height="38"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding}"
                    SelectedItem="{Binding TheUser}" />
            </StackPanel>

            <StackPanel Width="311">
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Choose the book:" />
                <ComboBox
                    x:Name="books"
                    Width="181"
                    Height="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    DisplayMemberPath="Title"
                    ItemsSource="{Binding}"
                    SelectedItem="{Binding TheBook}" />
            </StackPanel>

        </StackPanel>

        <ToggleButton
            x:Name="borrowButton"
            Width="190"
            Height="29"
            Margin="0,200,10,100"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding BorrowBookCommand}"
            Content="Borrow the book" />

    </StackPanel>
</Window>
