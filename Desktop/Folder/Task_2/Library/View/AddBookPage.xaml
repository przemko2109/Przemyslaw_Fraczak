<Window x:Class="Library.View.AddBookPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View"
        mc:Ignorable="d"
        Title="AddBookPage" Height="356" Width="500">
    <StackPanel>
        <StackPanel Margin="3" Orientation="Horizontal">
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Title: " />
            <TextBox FontSize="16" Text="{Binding Title}" />
        </StackPanel>

        <StackPanel Margin="3" Orientation="Horizontal">
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Author: " />
            <TextBox FontSize="16" Text="{Binding AuthorName}" />
        </StackPanel>

        <StackPanel Margin="3" Orientation="Horizontal">
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Genre: " />
            <TextBox FontSize="16" Text="{Binding Genre}" />
        </StackPanel>

        <Button
            Width="190"
            Height="29"
            Margin="0,200,10,100"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding AddCatalogBookButtonCommand}"
            Content="Add book" />
    </StackPanel>
</Window>
